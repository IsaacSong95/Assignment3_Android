<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GriditemActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/textViewGridName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:text="break"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/imageViewData"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/brakes"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewGridName"
        android:layout_marginTop="27dp"/>
    <TextView
        android:id="@+id/textViewGridDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="break break break break break break break break break break break break break break break break break break break break "
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        android:textSize="15dp"/>
</RelativeLayout>